import java.util.Scanner;
class Main 
{
    public static void main(String[]args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter a statement");
        String s=sc.nextLine();
        String []s1=s.split(" ");
        System.out.print("turning given statement to title case: ");
        for(String s2:s1)
        {
            System.out.print(s2.substring(0,1).toUpperCase()+s2.substring(1,s2.length()).toLowerCase()+" ");
        }
    }
}
